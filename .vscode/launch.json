        {
            "name": "stage-release",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "args": [
                "--flavor", "stage",
                "--dart-define=env=stage"
            ]
        },
        {
            "name": "prod",
            "request": "launch",
            "type": "dart",
