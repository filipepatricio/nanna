            "type": "dart",
            "flutterMode": "profile",
            "args": [
                "--flavor", "prod",
                "--dart-define=env=prod",
                "--cache-sksl"
            ]
        },
        {
            "name": "Golden",
            "request": "launch",
            "type": "dart",
            "codeLens": {
